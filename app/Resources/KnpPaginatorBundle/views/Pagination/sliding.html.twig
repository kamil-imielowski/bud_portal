{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<ul class="pagination">
    {% if first is defined and current != first %}
        {#<span class="first">#}
            <a class="pagination__item" href="{{ path(route, query|merge({(pageParameterName): first})) }}">&lt;&lt;</a>
        {#</span>#}
    {% endif %}

    {% if previous is defined %}
        {#<span class="previous">#}
            <a class="pagination__item" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a>
        {#</span>#}
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            {#<span class="page">#}
                <a class="pagination__item" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            {#</span>#}
        {% else %}
            <span class="pagination__item active">{{ page }}</span>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        {#<span class="next">#}
            <a class="pagination__item" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
        {#</span>#}
    {% endif %}

    {% if last is defined and current != last %}
        {#<span class="last">#}
            <a class="pagination__item" href="{{ path(route, query|merge({(pageParameterName): last})) }}">&gt;&gt;</a>
        {#</span>#}
    {% endif %}
</ul>
{% endif %}
