{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content-->
    <div class="md-content">

        <!-- Section -->
        <section class="md-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 col-xl-8 offset-0 offset-sm-0 offset-md-0 offset-lg-1 offset-xl-2 ">

                        <!-- title-01 -->
                        <div class="title-01 title-01__style-04">
                            <h3>Pytania Ustne</h3>
                        </div><!-- End / title-01 -->

                        {% if is_granted("ROLE_USER") %}

                            {% for question in questions %}
                                <div>
                                    <div class="question-box">
                                        <p class="d-inline">{{ question.question }}</p>
                                        <button class="btn btn-primary d-inline btn-xs question" data-answer="a-{{ question.id }}"><i class="fas fa-reply"></i> Odpowied≈∫</button>
                                    </div>
                                    <p id="a-{{ question.id }}" style="display: none">{{ question.answer }}</p>
                                </div>
                            {% endfor %}

                            <div class="navigation">
                                <div class="layout-blog__content">
                                    {{ knp_pagination_render(questions) }}
                                </div>
                            </div>

                        {% else %}
                            <div>
                                {{ cms.content }}
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>
        </section>
        <!-- End / Section -->

    </div>
    <!-- End / Content-->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/disabledCopy.js') }}"></script>
    <script>
        $(".question").click(function () {
            var a = $(this).data('answer');
            $("#"+a).slideToggle( "slow", function() {
                // Animation complete.
            });
        })
    </script>
{% endblock %}
